{
  "hosting": {
    "public": "dist/packages/demo",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source": "dist/packages/demo-api",
    "runtime": "nodejs16",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "hosting": {
      "enabled": false
    },
    "auth": {
      "host": "0.0.0.0",
      "port": 9900
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 9901
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 9902
    },
    "pubsub": {
      "host": "0.0.0.0",
      "port": 9903
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9904
    },
    "ui": {
      "host": "0.0.0.0",
      "enabled": true,
      "port": 9905
    }
  }
}
