{
  "root": "packages/util-rxjs",
  "sourceRoot": "packages/util-rxjs/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/util-rxjs",
        "main": "packages/util-rxjs/src/index.ts",
        "tsConfig": "packages/util-rxjs/tsconfig.lib.json",
        "assets": ["packages/util-rxjs/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/util-rxjs/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/util-rxjs"],
      "options": {
        "jestConfig": "packages/util-rxjs/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
