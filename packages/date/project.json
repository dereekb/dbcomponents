{
  "name": "date",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/date/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/date"],
      "options": {
        "command": "npx nx run date:build-base",
        "color": true
      }
    },
    "build-base": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "importPath": "@dereekb/date",
        "outputPath": "dist/packages/date",
        "main": "packages/date/src/index.ts",
        "tsConfig": "packages/date/tsconfig.lib.json",
        "compiler": "babel",
        "project": "packages/date/package.json",
        "format": ["esm", "cjs"],
        "generateExportsField": true,
        "assets": [
          {
            "glob": "packages/date/README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "LICENSE",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/date/**/*.ts", "packages/date/package.json", "packages/date/project.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/date", "{projectRoot}/.reports/jest/utc.date.junit.xml"],
      "options": {
        "jestConfig": "packages/date/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "test-timezones": {
      "outputs": [
        "{workspaceRoot}/coverage/packages/date",
        "{projectRoot}/.reports/jest/utc.date.junit.xml",
        "{projectRoot}/.reports/jest/america-chicago.date.junit.xml",
        "{projectRoot}/.reports/jest/pacific-auckland.date.junit.xml",
        "{projectRoot}/.reports/jest/america-anchorage.date.junit.xml",
        "{projectRoot}/.reports/jest/america-los_angeles.date.junit.xml",
        "{projectRoot}/.reports/jest/america-new_york.date.junit.xml",
        "{projectRoot}/.reports/jest/asia-tokyo.date.junit.xml",
        "{projectRoot}/.reports/jest/asia-singapore.date.junit.xml",
        "{projectRoot}/.reports/jest/europe-dublic.date.junit.xml"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "TZ=Asia/Tokyo && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Asia/Singapore && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Europe/Dublin && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/New_York && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Chicago && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Denver && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Los_Angeles && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Anchorage && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Pacific/Auckland && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Pacific/Kiritimati && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Pacific/Niue && echo $TZ && nx test date --skip-nx-cache"
          },
          {
            "command": "nx test date --skip-nx-cache"
          }
        ],
        "parallel": false
      }
    },
    "test-timezones-local": {
      "outputs": [
        "{workspaceRoot}/coverage/packages/date",
        "{projectRoot}/.reports/jest/utc.date.junit.xml",
        "{projectRoot}/.reports/jest/america-chicago.date.junit.xml",
        "{projectRoot}/.reports/jest/pacific-auckland.date.junit.xml",
        "{projectRoot}/.reports/jest/america-anchorage.date.junit.xml",
        "{projectRoot}/.reports/jest/america-los_angeles.date.junit.xml",
        "{projectRoot}/.reports/jest/america-new_york.date.junit.xml",
        "{projectRoot}/.reports/jest/asia-tokyo.date.junit.xml",
        "{projectRoot}/.reports/jest/asia-singapore.date.junit.xml",
        "{projectRoot}/.reports/jest/europe-dublic.date.junit.xml"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "TZ=Asia/Tokyo nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Asia/Singapore nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Europe/Dublin nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/New_York nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Chicago nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Denver nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Los_Angeles nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=America/Anchorage nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Pacific/Auckland nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Pacific/Kiritimati nx test date --skip-nx-cache"
          },
          {
            "command": "TZ=Pacific/Niue nx test date --skip-nx-cache"
          },
          {
            "command": "nx test date --skip-nx-cache"
          }
        ],
        "parallel": false
      }
    },
    "publish-npmjs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd ./dist/packages/date && npm publish --access public"
      }
    }
  },
  "implicitDependencies": ["!util-test"],
  "tags": []
}
